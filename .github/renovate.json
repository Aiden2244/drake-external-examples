{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": false,
  "schedule": [
    "at any time"
  ],
  "timezone": "America/New_York",
  "enabledManagers": [
    "pip_requirements",
    "poetry",
    "bazel"
  ],
  "includePaths": [
    "drake_pip/**",
    "drake_poetry/**",
    "drake_bazel_download/**",
    "drake_bazel_external/**"
  ],
  "pip_requirements": {
    "managerFilePatterns": [
      "/drake_pip/requirements\\.txt$/"
    ]
  },
  "poetry": {
    "managerFilePatterns": [
      "/drake_poetry/pyproject\\.toml$/"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "drake",
        "rules_python",
        "rules_cc",
        "bazel"
      ],
      "rangeStrategy": "bump"
    }
  ]
}
